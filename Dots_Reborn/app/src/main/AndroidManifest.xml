<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dovydas.dots_reborn" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Dots Reborn"
        android:logo="@mipmap/ic_launcher"
        android:theme="@style/Dovy" >
        <activity
            android:name=".MainActivity"
            android:icon="@mipmap/ic_launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InGameOptionsActivity"
            android:label="@string/title_activity_in_game_options" >
        </activity>
        <activity
            android:name=".IntermediateHighscoreActivity"
            android:icon="@drawable/ic_scores" >
        </activity>
        <activity
            android:name=".DisplayHighScoresActivity"
            android:icon="@drawable/ic_scores" >
        </activity>
        <activity
            android:name=".StartGameOptionsActivity"
            android:icon="@drawable/ic_options" >
        </activity>
        <activity
            android:name=".PlayGameActivity"
            android:screenOrientation="portrait"
            android:icon="@drawable/ic_timed" >
        </activity>
        <activity
            android:name=".EndGameActivity"
            android:label="@string/title_activity_end_game" >
        </activity>
    </application>

</manifest>
